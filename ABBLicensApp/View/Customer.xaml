<Page
    x:Class="ABBLicensApp.View.Customer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ABBLicensApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:ABBLicensApp.Viewmodel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewmodel:CustomerViewModel/>
    </Page.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Grid.ColumnSpan="2">
                <TextBlock Text="{Binding  Customer.CompanyName}" HorizontalAlignment="Center"
                           FontSize="40"/>
                <TextBlock Text="{Binding Customer.ContactName}" HorizontalAlignment="Center"
                           FontSize="30"/>
                <TextBlock Text="{Binding Customer.Email}" HorizontalAlignment="Center"
                           FontSize="30"/>

            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0">
                <TextBlock Text="INDSÆT LICENS NAVN HER" FontSize="20" HorizontalAlignment="Center"/>
                <ListView ItemsSource="{Binding Customer.Products}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding ProductName}" Margin="10"/>
                                <TextBlock Text="{Binding SupplierName}" Margin="10"/>
                                <TextBlock Text="{Binding StartDate}"  Margin="10"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <StackPanel Grid.Row="1" Grid.Column="1">
                <TextBlock Text="Licenses" FontSize="20" HorizontalAlignment="Center"/>
                <ListView ItemsSource="{Binding Customer.Products}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                                <TextBlock Text="{Binding SupplierName}" Margin="10" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
